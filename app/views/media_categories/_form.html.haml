= simple_form_for(@media_category, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :code_external
    = f.input :name
    = f.association :type
    = f.association :parent
    = f.input :g_l_acc_no_media_rev_by_media_type
    = f.input :g_l_acc_no_media_billing_control
    = f.input :g_l_acc_no_commission_revenue
    = f.input :g_l_acc_no_commission_revenue_rebate_to_client
    = f.input :g_l_acc_no_commission_to_associates_expense
    = f.association :default_material_deadline_days
    = f.association :default_cancellation_days
    = f.input :colour
    = f.association :default_d_p_i_e_i_s_service_prover
    = f.input :eis_sync_date
    = f.association :default_media_advert_source
    = f.input :is_active

  .form-actions
    = f.button :wrapped,
               :delete => @media_category,
               :cancel => media_categories_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
