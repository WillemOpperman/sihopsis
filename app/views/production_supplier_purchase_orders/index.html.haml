.page-header
  %h3
    Production_supplier_purchase_orders
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), production_supplier_purchase_orders_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), production_supplier_purchase_orders_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => production_supplier_purchase_orders_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Campaign schedule
          %th
            Supplier
          %th
            Contact
          %th
            Status
          %th
            Postal address
          %th
            Physical address
          %th
            Production cost amount
          %th
            Production cost home amount
          %th
            Production cost tax amount
          %th
            Production cost tax home amount
          %th
            Production cost inc tax amount
          %th
            Production cost inc tax home amount
          %th
            Tax type
          %th
            Currency
          %th
            Exchange rate
          %th
            Notes
          %th
            Communication status
          %th
            Creation source
          %th
            Eis sync date
          %th.button3
      %tbody
        - @production_supplier_purchase_orders.each do |production_supplier_purchase_order|
          %tr
            %td
              = production_supplier_purchase_order.uid
            %td
              = production_supplier_purchase_order.code
            %td
              = production_supplier_purchase_order.name
            %td
              = production_supplier_purchase_order.campaign_schedule
            %td
              = production_supplier_purchase_order.supplier
            %td
              = production_supplier_purchase_order.contact
            %td
              = production_supplier_purchase_order.status
            %td
              = production_supplier_purchase_order.postal_address
            %td
              = production_supplier_purchase_order.physical_address
            %td
              = production_supplier_purchase_order.production_cost_amount
            %td
              = production_supplier_purchase_order.production_cost_home_amount
            %td
              = production_supplier_purchase_order.production_cost_tax_amount
            %td
              = production_supplier_purchase_order.production_cost_tax_home_amount
            %td
              = production_supplier_purchase_order.production_cost_inc_tax_amount
            %td
              = production_supplier_purchase_order.production_cost_inc_tax_home_amount
            %td
              = production_supplier_purchase_order.tax_type
            %td
              = production_supplier_purchase_order.currency
            %td
              = production_supplier_purchase_order.exchange_rate
            %td
              = production_supplier_purchase_order.notes
            %td
              = production_supplier_purchase_order.communication_status
            %td
              = production_supplier_purchase_order.creation_source
            %td
              = production_supplier_purchase_order.eis_sync_date
            %td
              .btn-group
                = link_to production_supplier_purchase_order, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_production_supplier_purchase_order_path(production_supplier_purchase_order), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to production_supplier_purchase_order, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@production_supplier_purchase_orders)

  #new.tab-pane
    = render 'form'
