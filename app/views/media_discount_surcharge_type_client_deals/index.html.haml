.page-header
  %h3
    Media_discount_surcharge_type_client_deals
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), media_discount_surcharge_type_client_deals_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), media_discount_surcharge_type_client_deals_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => media_discount_surcharge_type_client_deals_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Media discount surcharge type
          %th
            Client
          %th
            Client product
          %th
            Is client share calculated off rate
          %th
            Is client share amount based
          %th
            Client share percentage
          %th
            Client share amount
          %th
            Eis sync date
          %th
            Is default
          %th
            Is active
          %th.button3
      %tbody
        - @media_discount_surcharge_type_client_deals.each do |media_discount_surcharge_type_client_deal|
          %tr
            %td
              = media_discount_surcharge_type_client_deal.uid
            %td
              = media_discount_surcharge_type_client_deal.code
            %td
              = media_discount_surcharge_type_client_deal.name
            %td
              = media_discount_surcharge_type_client_deal.media_discount_surcharge_type
            %td
              = media_discount_surcharge_type_client_deal.client
            %td
              = media_discount_surcharge_type_client_deal.client_product
            %td
              = media_discount_surcharge_type_client_deal.is_client_share_calculated_off_rate
            %td
              = media_discount_surcharge_type_client_deal.is_client_share_amount_based
            %td
              = media_discount_surcharge_type_client_deal.client_share_percentage
            %td
              = media_discount_surcharge_type_client_deal.client_share_amount
            %td
              = media_discount_surcharge_type_client_deal.eis_sync_date
            %td
              = media_discount_surcharge_type_client_deal.is_default
            %td
              = media_discount_surcharge_type_client_deal.is_active
            %td
              .btn-group
                = link_to media_discount_surcharge_type_client_deal, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_media_discount_surcharge_type_client_deal_path(media_discount_surcharge_type_client_deal), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to media_discount_surcharge_type_client_deal, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@media_discount_surcharge_type_client_deals)

  #new.tab-pane
    = render 'form'
