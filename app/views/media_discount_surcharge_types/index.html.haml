.page-header
  %h3
    Media_discount_surcharge_types
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), media_discount_surcharge_types_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), media_discount_surcharge_types_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => media_discount_surcharge_types_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Media category
          %th
            Supplier
          %th
            Media space
          %th
            Media space part
          %th
            Media category size
          %th
            Media category format
          %th
            Is calculated off rate
          %th
            Is amount based
          %th
            Is full discount
          %th
            Eis sync date
          %th
            Is default
          %th
            Is active
          %th.button3
      %tbody
        - @media_discount_surcharge_types.each do |media_discount_surcharge_type|
          %tr
            %td
              = media_discount_surcharge_type.uid
            %td
              = media_discount_surcharge_type.code
            %td
              = media_discount_surcharge_type.name
            %td
              = media_discount_surcharge_type.media_category
            %td
              = media_discount_surcharge_type.supplier
            %td
              = media_discount_surcharge_type.media_space
            %td
              = media_discount_surcharge_type.media_space_part
            %td
              = media_discount_surcharge_type.media_category_size
            %td
              = media_discount_surcharge_type.media_category_format
            %td
              = media_discount_surcharge_type.is_calculated_off_rate
            %td
              = media_discount_surcharge_type.is_amount_based
            %td
              = media_discount_surcharge_type.is_full_discount
            %td
              = media_discount_surcharge_type.eis_sync_date
            %td
              = media_discount_surcharge_type.is_default
            %td
              = media_discount_surcharge_type.is_active
            %td
              .btn-group
                = link_to media_discount_surcharge_type, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_media_discount_surcharge_type_path(media_discount_surcharge_type), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to media_discount_surcharge_type, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@media_discount_surcharge_types)

  #new.tab-pane
    = render 'form'
