.page-header
  %h3
    Media_category_formats
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), media_category_formats_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), media_category_formats_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => media_category_formats_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Media category
          %th
            Media space
          %th
            Is active
          %th
            Eis sync date
          %th.button3
      %tbody
        - @media_category_formats.each do |media_category_format|
          %tr
            %td
              = media_category_format.uid
            %td
              = media_category_format.code
            %td
              = media_category_format.name
            %td
              = media_category_format.media_category
            %td
              = media_category_format.media_space
            %td
              = media_category_format.is_active
            %td
              = media_category_format.eis_sync_date
            %td
              .btn-group
                = link_to media_category_format, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_media_category_format_path(media_category_format), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to media_category_format, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@media_category_formats)

  #new.tab-pane
    = render 'form'
