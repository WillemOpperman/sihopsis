.page-header
  %h3
    Client_financial_document_line_discount_lines
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), client_financial_document_line_discount_lines_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), client_financial_document_line_discount_lines_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => client_financial_document_line_discount_lines_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Client financial document line
          %th
            Discount amount
          %th
            Discount home amount
          %th
            Discount to client amount
          %th
            Discount to client home amount
          %th
            Eis sync date
          %th.button3
      %tbody
        - @client_financial_document_line_discount_lines.each do |client_financial_document_line_discount_line|
          %tr
            %td
              = client_financial_document_line_discount_line.uid
            %td
              = client_financial_document_line_discount_line.code
            %td
              = client_financial_document_line_discount_line.client_financial_document_line
            %td
              = client_financial_document_line_discount_line.discount_amount
            %td
              = client_financial_document_line_discount_line.discount_home_amount
            %td
              = client_financial_document_line_discount_line.discount_to_client_amount
            %td
              = client_financial_document_line_discount_line.discount_to_client_home_amount
            %td
              = client_financial_document_line_discount_line.eis_sync_date
            %td
              .btn-group
                = link_to client_financial_document_line_discount_line, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_client_financial_document_line_discount_line_path(client_financial_document_line_discount_line), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to client_financial_document_line_discount_line, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@client_financial_document_line_discount_lines)

  #new.tab-pane
    = render 'form'
