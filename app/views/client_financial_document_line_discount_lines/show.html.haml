.page-header
  %h3
    Client_financial_document_line_discount_lines
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to client_financial_document_line_discount_lines_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_client_financial_document_line_discount_line_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_client_financial_document_line_discount_line_path(@client_financial_document_line_discount_line) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @client_financial_document_line_discount_line.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @client_financial_document_line_discount_line.code
        .row-fluid
          .span2
            %b
              Client financial document line
          .span10
            = @client_financial_document_line_discount_line.client_financial_document_line
        .row-fluid
          .span2
            %b
              Discount amount
          .span10
            = @client_financial_document_line_discount_line.discount_amount
        .row-fluid
          .span2
            %b
              Discount home amount
          .span10
            = @client_financial_document_line_discount_line.discount_home_amount
        .row-fluid
          .span2
            %b
              Discount to client amount
          .span10
            = @client_financial_document_line_discount_line.discount_to_client_amount
        .row-fluid
          .span2
            %b
              Discount to client home amount
          .span10
            = @client_financial_document_line_discount_line.discount_to_client_home_amount
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @client_financial_document_line_discount_line.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_financial_document_line_discount_line.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_financial_document_line_discount_line.updated_at)
