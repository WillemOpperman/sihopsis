= simple_form_for(@journals_document, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :status
    = f.association :company_cost_centre
    = f.association :company_accounting_period
    = f.input :internal_comments
    = f.association :creation_source
    = f.input :eis_sync_date
    = f.input :posting_date
    = f.input :actual_date
    = f.association :campaign
    = f.association :media_category

  .form-actions
    = f.button :wrapped,
               :delete => @journals_document,
               :cancel => journals_documents_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
