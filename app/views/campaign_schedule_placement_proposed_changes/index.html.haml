.page-header
  %h3
    Campaign_schedule_placement_proposed_changes
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), campaign_schedule_placement_proposed_changes_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), campaign_schedule_placement_proposed_changes_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => campaign_schedule_placement_proposed_changes_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Original campaign schedule placement
          %th
            Proposed campaign schedule placement
          %th
            Proposed user
          %th
            Approval user
          %th
            Is cancellation request
          %th
            Is approved
          %th
            Is rejected
          %th
            Status reason
          %th
            Status date
          %th
            Change reason
          %th
            Is closed
          %th
            Client financial document line
          %th.button3
      %tbody
        - @campaign_schedule_placement_proposed_changes.each do |campaign_schedule_placement_proposed_change|
          %tr
            %td
              = campaign_schedule_placement_proposed_change.uid
            %td
              = campaign_schedule_placement_proposed_change.code
            %td
              = campaign_schedule_placement_proposed_change.original_campaign_schedule_placement
            %td
              = campaign_schedule_placement_proposed_change.proposed_campaign_schedule_placement
            %td
              = campaign_schedule_placement_proposed_change.proposed_user
            %td
              = campaign_schedule_placement_proposed_change.approval_user
            %td
              = campaign_schedule_placement_proposed_change.is_cancellation_request
            %td
              = campaign_schedule_placement_proposed_change.is_approved
            %td
              = campaign_schedule_placement_proposed_change.is_rejected
            %td
              = campaign_schedule_placement_proposed_change.status_reason
            %td
              = campaign_schedule_placement_proposed_change.status_date
            %td
              = campaign_schedule_placement_proposed_change.change_reason
            %td
              = campaign_schedule_placement_proposed_change.is_closed
            %td
              = campaign_schedule_placement_proposed_change.client_financial_document_line
            %td
              .btn-group
                = link_to campaign_schedule_placement_proposed_change, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_campaign_schedule_placement_proposed_change_path(campaign_schedule_placement_proposed_change), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to campaign_schedule_placement_proposed_change, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@campaign_schedule_placement_proposed_changes)

  #new.tab-pane
    = render 'form'
