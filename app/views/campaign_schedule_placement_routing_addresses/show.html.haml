        = link_to edit_campaign_schedule_placement_routing_address_path(@campaign_schedule_placement_routing_address) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @campaign_schedule_placement_routing_address.uid
