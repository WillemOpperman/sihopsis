.page-header
  %h3
    Campaign_schedule_placement_routing_addresses
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to campaign_schedule_placement_routing_addresses_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
