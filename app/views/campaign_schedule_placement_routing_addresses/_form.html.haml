= simple_form_for(@campaign_schedule_placement_routing_address, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :campaign_schedule_placement
    = f.association :routing_address_source_type
    = f.association :routing_address_type
    = f.association :routing_address
    = f.input :notes
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @campaign_schedule_placement_routing_address,
               :cancel => campaign_schedule_placement_routing_addresses_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
