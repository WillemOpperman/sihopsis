= simple_form_for(@campaign_status, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.input :is_open
    = f.input :is_closed
    = f.input :is_cancelled
    = f.input :is_default
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @campaign_status,
               :cancel => campaign_statuses_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
