.page-header
  %h3
    Holdings_file_helpers
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), holdings_file_helpers_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), holdings_file_helpers_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => holdings_file_helpers_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Holdings file header
          %th
            Holdings file client code
          %th
            Holdings file client name
          %th
            Holdings file product code
          %th
            Holdings file product name
          %th
            Holdings file medium code
          %th
            Holdings file medium name
          %th
            Holdings file booked date
          %th
            Holdings file day flags
          %th
            Holdings file start time
          %th
            Holdings file end time
          %th
            Holdings file req days flags
          %th
            Holdings file req start time
          %th
            Holdings file req end time
          %th
            Holdings file duration
          %th
            Holdings file gross rate
          %th
            Holdings file gross decimal
          %th
            Holdings file program name
          %th
            Holdings file req program name
          %th
            Holdings file name for matching
          %th
            Eis sync date
          %th
            Holdings file temp code
          %th
            Holdings file booking code
          %th
            Holdings file top tailbooking code
          %th
            Holdings file system client code
          %th
            Holdings file system client product code
          %th.button3
      %tbody
        - @holdings_file_helpers.each do |holdings_file_helper|
          %tr
            %td
              = holdings_file_helper.uid
            %td
              = holdings_file_helper.code
            %td
              = holdings_file_helper.holdings_file_header
            %td
              = holdings_file_helper.holdings_file_client_code
            %td
              = holdings_file_helper.holdings_file_client_name
            %td
              = holdings_file_helper.holdings_file_product_code
            %td
              = holdings_file_helper.holdings_file_product_name
            %td
              = holdings_file_helper.holdings_file_medium_code
            %td
              = holdings_file_helper.holdings_file_medium_name
            %td
              = holdings_file_helper.holdings_file_booked_date
            %td
              = holdings_file_helper.holdings_file_day_flags
            %td
              = holdings_file_helper.holdings_file_start_time
            %td
              = holdings_file_helper.holdings_file_end_time
            %td
              = holdings_file_helper.holdings_file_req_days_flags
            %td
              = holdings_file_helper.holdings_file_req_start_time
            %td
              = holdings_file_helper.holdings_file_req_end_time
            %td
              = holdings_file_helper.holdings_file_duration
            %td
              = holdings_file_helper.holdings_file_gross_rate
            %td
              = holdings_file_helper.holdings_file_gross_decimal
            %td
              = holdings_file_helper.holdings_file_program_name
            %td
              = holdings_file_helper.holdings_file_req_program_name
            %td
              = holdings_file_helper.holdings_file_name_for_matching
            %td
              = holdings_file_helper.eis_sync_date
            %td
              = holdings_file_helper.holdings_file_temp_code
            %td
              = holdings_file_helper.holdings_file_booking_code
            %td
              = holdings_file_helper.holdings_file_top_tailbooking_code
            %td
              = holdings_file_helper.holdings_file_system_client_code
            %td
              = holdings_file_helper.holdings_file_system_client_product_code
            %td
              .btn-group
                = link_to holdings_file_helper, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_holdings_file_helper_path(holdings_file_helper), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to holdings_file_helper, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@holdings_file_helpers)

  #new.tab-pane
    = render 'form'
