= simple_form_for(@revision, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.association :company_division
    = f.association :parent
    = f.association :parent_entity_view
    = f.input :change_h_t_m_l_report
    = f.input :change_x_m_l
    = f.association :creation_source
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @revision,
               :cancel => revisions_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
