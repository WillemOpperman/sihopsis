= simple_form_for(@supplier_financial_document_payment_receipt, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :supplier_financial_document
    = f.association :payment_receipt
    = f.association :creation_source
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @supplier_financial_document_payment_receipt,
               :cancel => supplier_financial_document_payment_receipts_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
