.page-header
  %h3
    Suppliers
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), suppliers_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), suppliers_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => suppliers_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Code
          %th
            Code external
          %th
            Uid
          %th
            Name
          %th
            Offical name
          %th
            Company
          %th
            Company division
          %th
            Company registration no
          %th
            Default contact
          %th
            Creation source
          %th
            Type
          %th
            Phone number
          %th
            Fax number
          %th
            E mail
          %th
            Postal address
          %th
            Physical address
          %th
            Payment terms
          %th
            Tax registration no
          %th
            Default tax type
          %th
            Financial year end
          %th
            Commission percentage default
          %th
            Default currency
          %th
            Is active
          %th
            Eis sync date
          %th.button3
      %tbody
        - @suppliers.each do |supplier|
          %tr
            %td
              = supplier.code
            %td
              = supplier.code_external
            %td
              = supplier.uid
            %td
              = supplier.name
            %td
              = supplier.offical_name
            %td
              = supplier.company
            %td
              = supplier.company_division
            %td
              = supplier.company_registration_no
            %td
              = supplier.default_contact
            %td
              = supplier.creation_source
            %td
              = supplier.type
            %td
              = supplier.phone_number
            %td
              = supplier.fax_number
            %td
              = supplier.e_mail
            %td
              = supplier.postal_address
            %td
              = supplier.physical_address
            %td
              = supplier.payment_terms
            %td
              = supplier.tax_registration_no
            %td
              = supplier.default_tax_type
            %td
              = supplier.financial_year_end
            %td
              = supplier.commission_percentage_default
            %td
              = supplier.default_currency
            %td
              = supplier.is_active
            %td
              = supplier.eis_sync_date
            %td
              .btn-group
                = link_to supplier, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_supplier_path(supplier), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to supplier, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@suppliers)

  #new.tab-pane
    = render 'form'
