            %td
              = supplier_financial_document_line.uid
            %td
              = supplier_financial_document_line.code
            %td
              = supplier_financial_document_line.supplier_financial_document
            %td
              = supplier_financial_document_line.campaign_schedule_placement
            %td
              = supplier_financial_document_line.payable_gross_amount
            %td
              = supplier_financial_document_line.payable_gross_home_amount
            %td
              = supplier_financial_document_line.payable_commission_amount
            %td
              = supplier_financial_document_line.payable_commission_home_amount
            %td
              = supplier_financial_document_line.payable_nett_amount
            %td
              = supplier_financial_document_line.payable_nett_home_amount
            %td
              = supplier_financial_document_line.payable_intermediary_margin_amount
            %td
              = supplier_financial_document_line.payable_intermediary_margin_home_amount
            %td
              = supplier_financial_document_line.payable_actual_nett_amount
            %td
              = supplier_financial_document_line.payable_actual_nett_home_amount
            %td
              = supplier_financial_document_line.wanted_gross_amount
            %td
              = supplier_financial_document_line.wanted_home_gross_amount
            %td
              = supplier_financial_document_line.wanted_commission_amount
            %td
              = supplier_financial_document_line.wanted_commission_home_amount
            %td
              = supplier_financial_document_line.wanted_nett_amount
            %td
              = supplier_financial_document_line.wanted_nett_home_amount
