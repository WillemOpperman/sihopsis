            %td
              = supplier_financial_document_line.provision_exchange_rate
            %td
              = supplier_financial_document_line.provision_gross_home_amount
            %td
              = supplier_financial_document_line.provision_commission_home_amount
            %td
              = supplier_financial_document_line.provision_nett_home_amount
