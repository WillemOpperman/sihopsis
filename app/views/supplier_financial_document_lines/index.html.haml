              = supplier_financial_document_line.company_cost_centre
            %td
              = supplier_financial_document_line.payable_intermediary_margin_percentage
            %td
              = supplier_financial_document_line.wanted_intermediary_margin_percentage
            %td
              .btn-group
                = link_to supplier_financial_document_line, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_supplier_financial_document_line_path(supplier_financial_document_line), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to supplier_financial_document_line, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@supplier_financial_document_lines)

  #new.tab-pane
    = render 'form'
