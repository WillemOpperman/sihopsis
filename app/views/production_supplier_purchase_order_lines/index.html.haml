.page-header
  %h3
    Production_supplier_purchase_order_lines
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), production_supplier_purchase_order_lines_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), production_supplier_purchase_order_lines_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => production_supplier_purchase_order_lines_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Production supplier purchase order
          %th
            Campaign schedule placement production cost
          %th
            Percentage ordered
          %th
            Unit cost amount
          %th
            Units
          %th
            Production cost amount
          %th
            Production cost home amount
          %th
            Notes
          %th
            Eis sync date
          %th.button3
      %tbody
        - @production_supplier_purchase_order_lines.each do |production_supplier_purchase_order_line|
          %tr
            %td
              = production_supplier_purchase_order_line.uid
            %td
              = production_supplier_purchase_order_line.code
            %td
              = production_supplier_purchase_order_line.production_supplier_purchase_order
            %td
              = production_supplier_purchase_order_line.campaign_schedule_placement_production_cost
            %td
              = production_supplier_purchase_order_line.percentage_ordered
            %td
              = production_supplier_purchase_order_line.unit_cost_amount
            %td
              = production_supplier_purchase_order_line.units
            %td
              = production_supplier_purchase_order_line.production_cost_amount
            %td
              = production_supplier_purchase_order_line.production_cost_home_amount
            %td
              = production_supplier_purchase_order_line.notes
            %td
              = production_supplier_purchase_order_line.eis_sync_date
            %td
              .btn-group
                = link_to production_supplier_purchase_order_line, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_production_supplier_purchase_order_line_path(production_supplier_purchase_order_line), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to production_supplier_purchase_order_line, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@production_supplier_purchase_order_lines)

  #new.tab-pane
    = render 'form'
