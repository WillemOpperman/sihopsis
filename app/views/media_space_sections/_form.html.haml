= simple_form_for(@media_space_section, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :media_space
    = f.association :default_material_deadline_days
    = f.association :default_cancellation_days
    = f.input :is_active
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @media_space_section,
               :cancel => media_space_sections_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
