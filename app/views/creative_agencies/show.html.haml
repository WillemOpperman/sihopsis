.page-header
  %h3
    Creative_agencies
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to creative_agencies_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_creative_agency_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_creative_agency_path(@creative_agency) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @creative_agency.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @creative_agency.code
        .row-fluid
          .span2
            %b
              Company
          .span10
            = @creative_agency.company
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @creative_agency.name
        .row-fluid
          .span2
            %b
              Legal name
          .span10
            = @creative_agency.legal_name
        .row-fluid
          .span2
            %b
              Is active
          .span10
            = @creative_agency.is_active
        .row-fluid
          .span2
            %b
              Postal address
          .span10
            = @creative_agency.postal_address
        .row-fluid
          .span2
            %b
              Physical address
          .span10
            = @creative_agency.physical_address
        .row-fluid
          .span2
            %b
              Phone number
          .span10
            = @creative_agency.phone_number
        .row-fluid
          .span2
            %b
              Fax number
          .span10
            = @creative_agency.fax_number
        .row-fluid
          .span2
            %b
              E mail
          .span10
            = @creative_agency.e_mail
        .row-fluid
          .span2
            %b
              Notes
          .span10
            = @creative_agency.notes
        .row-fluid
          .span2
            %b
              Default contact
          .span10
            = @creative_agency.default_contact
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@creative_agency.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@creative_agency.updated_at)
