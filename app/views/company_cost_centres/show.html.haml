.page-header
  %h3
    Company_cost_centres
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to company_cost_centres_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_company_cost_centre_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_company_cost_centre_path(@company_cost_centre) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @company_cost_centre.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @company_cost_centre.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @company_cost_centre.name
        .row-fluid
          .span2
            %b
              Company
          .span10
            = @company_cost_centre.company
        .row-fluid
          .span2
            %b
              Is active
          .span10
            = @company_cost_centre.is_active
        .row-fluid
          .span2
            %b
              Creation source
          .span10
            = @company_cost_centre.creation_source
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @company_cost_centre.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@company_cost_centre.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@company_cost_centre.updated_at)
