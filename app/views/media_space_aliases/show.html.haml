.page-header
  %h3
    Media_space_aliases
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to media_space_aliases_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_media_space_alias_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_media_space_alias_path(@media_space_alias) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @media_space_alias.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @media_space_alias.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @media_space_alias.name
        .row-fluid
          .span2
            %b
              Media space
          .span10
            = @media_space_alias.media_space
        .row-fluid
          .span2
            %b
              Media region
          .span10
            = @media_space_alias.media_region
        .row-fluid
          .span2
            %b
              Creation source
          .span10
            = @media_space_alias.creation_source
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_space_alias.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_space_alias.updated_at)
