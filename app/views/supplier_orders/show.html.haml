.page-header
  %h3
    Supplier_orders
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to supplier_orders_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_supplier_order_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_supplier_order_path(@supplier_order) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
