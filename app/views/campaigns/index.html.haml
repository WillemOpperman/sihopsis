.page-header
  %h3
    Campaigns
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), campaigns_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), campaigns_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => campaigns_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Code external
          %th
            Name
          %th
            Additional name
          %th
            Company division
          %th
            Status
          %th
            Client
          %th
            Default client product
          %th
            Default client product sub
          %th
            Default creative agency
          %th
            Default media agency client
          %th
            Default natural client
          %th
            Default natural client product
          %th
            Owner user
          %th
            Manager user
          %th
            Default client contact
          %th
            Default creative agency contact
          %th
            Default media agency client contact
          %th
            Default natural client contact
          %th
            Client purchase order
          %th
            Creation source
          %th
            Start date
          %th
            Finish date
          %th
            Eis sync date
          %th.button3
      %tbody
        - @campaigns.each do |campaign|
          %tr
            %td
              = campaign.uid
            %td
              = campaign.code
            %td
              = campaign.code_external
            %td
              = campaign.name
            %td
              = campaign.additional_name
            %td
              = campaign.company_division
            %td
              = campaign.status
            %td
              = campaign.client
            %td
              = campaign.default_client_product
            %td
              = campaign.default_client_product_sub
            %td
              = campaign.default_creative_agency
            %td
              = campaign.default_media_agency_client
            %td
              = campaign.default_natural_client
            %td
              = campaign.default_natural_client_product
            %td
              = campaign.owner_user
            %td
              = campaign.manager_user
            %td
              = campaign.default_client_contact
            %td
              = campaign.default_creative_agency_contact
            %td
              = campaign.default_media_agency_client_contact
            %td
              = campaign.default_natural_client_contact
            %td
              = campaign.client_purchase_order
            %td
              = campaign.creation_source
            %td
              = campaign.start_date
            %td
              = campaign.finish_date
            %td
              = campaign.eis_sync_date
            %td
              .btn-group
                = link_to campaign, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_campaign_path(campaign), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to campaign, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@campaigns)

  #new.tab-pane
    = render 'form'
