.page-header
  %h3
    Associate_financial_document_payment_receipts
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), associate_financial_document_payment_receipts_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), associate_financial_document_payment_receipts_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => associate_financial_document_payment_receipts_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Associate financial document
          %th
            Payment receipt
          %th
            Creation source
          %th
            Eis sync date
          %th.button3
      %tbody
        - @associate_financial_document_payment_receipts.each do |associate_financial_document_payment_receipt|
          %tr
            %td
              = associate_financial_document_payment_receipt.uid
            %td
              = associate_financial_document_payment_receipt.code
            %td
              = associate_financial_document_payment_receipt.name
            %td
              = associate_financial_document_payment_receipt.associate_financial_document
            %td
              = associate_financial_document_payment_receipt.payment_receipt
            %td
              = associate_financial_document_payment_receipt.creation_source
            %td
              = associate_financial_document_payment_receipt.eis_sync_date
            %td
              .btn-group
                = link_to associate_financial_document_payment_receipt, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_associate_financial_document_payment_receipt_path(associate_financial_document_payment_receipt), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to associate_financial_document_payment_receipt, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@associate_financial_document_payment_receipts)

  #new.tab-pane
    = render 'form'
