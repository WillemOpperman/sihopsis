= simple_form_for(@campaign_schedule_inventory_check, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.association :company_division
    = f.association :campaign_schedule
    = f.association :supplier
    = f.association :media_space
    = f.association :contact
    = f.association :communication_status
    = f.association :creation_source
    = f.input :gross_amount
    = f.input :commission_amount
    = f.input :nett_amount
    = f.association :tax_type
    = f.input :tax_gross_amount
    = f.input :tax_nett_amount
    = f.input :description
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @campaign_schedule_inventory_check,
               :cancel => campaign_schedule_inventory_checks_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
