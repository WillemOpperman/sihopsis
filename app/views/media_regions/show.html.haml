.page-header
  %h3
    Media_regions
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to media_regions_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_media_region_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_media_region_path(@media_region) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @media_region.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @media_region.code
        .row-fluid
          .span2
            %b
              Code external
          .span10
            = @media_region.code_external
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @media_region.name
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @media_region.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_region.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_region.updated_at)
