= simple_form_for(@client_material, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.association :client
    = f.association :client_product
    = f.association :media_category
    = f.input :advert_no
    = f.input :advert_name
    = f.input :advert_title
    = f.association :media_category_size
    = f.association :media_category_format
    = f.input :notes
    = f.association :creation_source
    = f.association :creative_agency
    = f.input :is_advert_title_auto_maintained
    = f.input :is_active
    = f.input :expiry_date
    = f.input :eis_sync_date
    = f.input :is_advert_name_auto_maintained
    = f.input :is_ad_vert_number_derived_from_code

  .form-actions
    = f.button :wrapped,
               :delete => @client_material,
               :cancel => client_materials_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
