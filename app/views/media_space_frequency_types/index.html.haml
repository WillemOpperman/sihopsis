.page-header
  %h3
    Media_space_frequency_types
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), media_space_frequency_types_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), media_space_frequency_types_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => media_space_frequency_types_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Is secondly
          %th
            Is minutely
          %th
            Is hourly
          %th
            Is daily
          %th
            Is weekly
          %th
            Is bi weekly
          %th
            Is monthly
          %th
            Is bi monthly
          %th
            Is quarterly
          %th
            Is annually
          %th
            Is bi annually
          %th
            Is custom days
          %th
            Custom days
          %th
            Eis sync date
          %th.button3
      %tbody
        - @media_space_frequency_types.each do |media_space_frequency_type|
          %tr
            %td
              = media_space_frequency_type.uid
            %td
              = media_space_frequency_type.code
            %td
              = media_space_frequency_type.name
            %td
              = media_space_frequency_type.is_secondly
            %td
              = media_space_frequency_type.is_minutely
            %td
              = media_space_frequency_type.is_hourly
            %td
              = media_space_frequency_type.is_daily
            %td
              = media_space_frequency_type.is_weekly
            %td
              = media_space_frequency_type.is_bi_weekly
            %td
              = media_space_frequency_type.is_monthly
            %td
              = media_space_frequency_type.is_bi_monthly
            %td
              = media_space_frequency_type.is_quarterly
            %td
              = media_space_frequency_type.is_annually
            %td
              = media_space_frequency_type.is_bi_annually
            %td
              = media_space_frequency_type.is_custom_days
            %td
              = media_space_frequency_type.custom_days
            %td
              = media_space_frequency_type.eis_sync_date
            %td
              .btn-group
                = link_to media_space_frequency_type, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_media_space_frequency_type_path(media_space_frequency_type), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to media_space_frequency_type, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@media_space_frequency_types)

  #new.tab-pane
    = render 'form'
