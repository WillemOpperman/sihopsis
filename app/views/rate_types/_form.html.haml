= simple_form_for(@rate_type, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :media_category
    = f.input :is_default
    = f.input :is_calculated_as_rate_x_size_x_columns
    = f.input :is_calculated_as_rate_x_size_x_columns_over_quantity_per_unit_rate_x_quantity
    = f.input :is_calculated_as_rate_over_quantity_per_unit_rate_x_quantity
    = f.input :is_added_value
    = f.input :default_quantity_per_unit_rate
    = f.input :eis_sync_date
    = f.input :is_active

  .form-actions
    = f.button :wrapped,
               :delete => @rate_type,
               :cancel => rate_types_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
