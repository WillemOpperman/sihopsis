.page-header
  %h3
    Media_owners
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to media_owners_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_media_owner_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_media_owner_path(@media_owner) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @media_owner.code
        .row-fluid
          .span2
            %b
              Code external
          .span10
            = @media_owner.code_external
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @media_owner.uid
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @media_owner.name
        .row-fluid
          .span2
            %b
              Offical name
          .span10
            = @media_owner.offical_name
        .row-fluid
          .span2
            %b
              Default contact
          .span10
            = @media_owner.default_contact
        .row-fluid
          .span2
            %b
              Creation source
          .span10
            = @media_owner.creation_source
        .row-fluid
          .span2
            %b
              Phone number
          .span10
            = @media_owner.phone_number
        .row-fluid
          .span2
            %b
              Fax number
          .span10
            = @media_owner.fax_number
        .row-fluid
          .span2
            %b
              E mail
          .span10
            = @media_owner.e_mail
        .row-fluid
          .span2
            %b
              Postal address
          .span10
            = @media_owner.postal_address
        .row-fluid
          .span2
            %b
              Physical address
          .span10
            = @media_owner.physical_address
        .row-fluid
          .span2
            %b
              Default commission percentage
          .span10
            = @media_owner.default_commission_percentage
        .row-fluid
          .span2
            %b
              Default material deadline days
          .span10
            = @media_owner.default_material_deadline_days
        .row-fluid
          .span2
            %b
              Default cancellation days
          .span10
            = @media_owner.default_cancellation_days
        .row-fluid
          .span2
            %b
              Is active
          .span10
            = @media_owner.is_active
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @media_owner.eis_sync_date
        .row-fluid
          .span2
            %b
              Company division
          .span10
            = @media_owner.company_division
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_owner.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_owner.updated_at)
