= simple_form_for(@contact, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :code
    = f.input :uid
    = f.input :name
    = f.input :is_active
    = f.input :birthdate
    = f.input :designation
    = f.input :phone_number
    = f.input :phone_number2
    = f.input :mobile_number
    = f.input :fax_number
    = f.input :e_mail
    = f.input :postal_address
    = f.input :physical_address
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @contact,
               :cancel => contacts_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
