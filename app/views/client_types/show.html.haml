.page-header
  %h3
    Client_types
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to client_types_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_client_type_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_client_type_path(@client_type) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @client_type.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @client_type.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @client_type.name
        .row-fluid
          .span2
            %b
              Is financial
          .span10
            = @client_type.is_financial
        .row-fluid
          .span2
            %b
              Is client
          .span10
            = @client_type.is_client
        .row-fluid
          .span2
            %b
              Is natural client
          .span10
            = @client_type.is_natural_client
        .row-fluid
          .span2
            %b
              Is media agency
          .span10
            = @client_type.is_media_agency
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @client_type.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_type.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_type.updated_at)
