.page-header
  %h3
    Supplier_order_request_lines
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), supplier_order_request_lines_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), supplier_order_request_lines_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => supplier_order_request_lines_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Revision no
          %th
            Supplier order request
          %th
            Campaign schedule placement
          %th
            Order gross amount
          %th
            Order commission amount
          %th
            Order nett amount
          %th
            Commission percent
          %th
            Eis sync date
          %th
            Order gross amount home
          %th
            Order commission amount home
          %th
            Order nett amount home
          %th
            Is active
          %th
            Is changed in current revision
          %th
            Revision change details
          %th
            Change reason
          %th
            Notes
          %th.button3
      %tbody
        - @supplier_order_request_lines.each do |supplier_order_request_line|
          %tr
            %td
              = supplier_order_request_line.uid
            %td
              = supplier_order_request_line.code
            %td
              = supplier_order_request_line.revision_no
            %td
              = supplier_order_request_line.supplier_order_request
            %td
              = supplier_order_request_line.campaign_schedule_placement
            %td
              = supplier_order_request_line.order_gross_amount
            %td
              = supplier_order_request_line.order_commission_amount
            %td
              = supplier_order_request_line.order_nett_amount
            %td
              = supplier_order_request_line.commission_percent
            %td
              = supplier_order_request_line.eis_sync_date
            %td
              = supplier_order_request_line.order_gross_amount_home
            %td
              = supplier_order_request_line.order_commission_amount_home
            %td
              = supplier_order_request_line.order_nett_amount_home
            %td
              = supplier_order_request_line.is_active
            %td
              = supplier_order_request_line.is_changed_in_current_revision
            %td
              = supplier_order_request_line.revision_change_details
            %td
              = supplier_order_request_line.change_reason
            %td
              = supplier_order_request_line.notes
            %td
              .btn-group
                = link_to supplier_order_request_line, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_supplier_order_request_line_path(supplier_order_request_line), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to supplier_order_request_line, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@supplier_order_request_lines)

  #new.tab-pane
    = render 'form'
