.page-header
  %h3
    Client_billing_types
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), client_billing_types_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), client_billing_types_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => client_billing_types_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Company division
          %th
            Name
          %th
            Sort order
          %th
            Is split by client
          %th
            Is split by campaign
          %th
            Is split by campaign schedule
          %th
            Is split by order no
          %th
            Is split by campaign schedule placement
          %th
            Is split by media space
          %th
            Is split by client material
          %th
            Is split by week
          %th
            Company
          %th
            Is default
          %th
            Is split by month
          %th
            Is split by year
          %th.button3
      %tbody
        - @client_billing_types.each do |client_billing_type|
          %tr
            %td
              = client_billing_type.uid
            %td
              = client_billing_type.code
            %td
              = client_billing_type.company_division
            %td
              = client_billing_type.name
            %td
              = client_billing_type.sort_order
            %td
              = client_billing_type.is_split_by_client
            %td
              = client_billing_type.is_split_by_campaign
            %td
              = client_billing_type.is_split_by_campaign_schedule
            %td
              = client_billing_type.is_split_by_order_no
            %td
              = client_billing_type.is_split_by_campaign_schedule_placement
            %td
              = client_billing_type.is_split_by_media_space
            %td
              = client_billing_type.is_split_by_client_material
            %td
              = client_billing_type.is_split_by_week
            %td
              = client_billing_type.company
            %td
              = client_billing_type.is_default
            %td
              = client_billing_type.is_split_by_month
            %td
              = client_billing_type.is_split_by_year
            %td
              .btn-group
                = link_to client_billing_type, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_client_billing_type_path(client_billing_type), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to client_billing_type, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@client_billing_types)

  #new.tab-pane
    = render 'form'
