.page-header
  %h3
    Currency_lists
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to currency_lists_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_currency_list_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_currency_list_path(@currency_list) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @currency_list.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @currency_list.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @currency_list.name
        .row-fluid
          .span2
            %b
              Company
          .span10
            = @currency_list.company
        .row-fluid
          .span2
            %b
              Company division
          .span10
            = @currency_list.company_division
        .row-fluid
          .span2
            %b
              Start date
          .span10
            = @currency_list.start_date
        .row-fluid
          .span2
            %b
              Expiry date
          .span10
            = @currency_list.expiry_date
        .row-fluid
          .span2
            %b
              Is active
          .span10
            = @currency_list.is_active
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @currency_list.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@currency_list.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@currency_list.updated_at)
