= simple_form_for(@currency_list, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :company
    = f.association :company_division
    = f.input :start_date
    = f.input :expiry_date
    = f.input :is_active
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @currency_list,
               :cancel => currency_lists_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
