.page-header
  %h3
    Service_providers
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to service_providers_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_service_provider_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_service_provider_path(@service_provider) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @service_provider.code
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @service_provider.uid
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @service_provider.name
        .row-fluid
          .span2
            %b
              Is this agency
          .span10
            = @service_provider.is_this_agency
        .row-fluid
          .span2
            %b
              Default proof file extention
          .span10
            = @service_provider.default_proof_file_extention
        .row-fluid
          .span2
            %b
              Is active
          .span10
            = @service_provider.is_active
        .row-fluid
          .span2
            %b
              Modified date
          .span10
            = @service_provider.modified_date
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @service_provider.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@service_provider.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@service_provider.updated_at)
