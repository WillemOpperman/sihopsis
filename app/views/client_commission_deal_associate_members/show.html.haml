.page-header
  %h3
    Client_commission_deal_associate_members
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to client_commission_deal_associate_members_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_client_commission_deal_associate_member_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_client_commission_deal_associate_member_path(@client_commission_deal_associate_member) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @client_commission_deal_associate_member.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @client_commission_deal_associate_member.code
        .row-fluid
          .span2
            %b
              Client commission deal
          .span10
            = @client_commission_deal_associate_member.client_commission_deal
        .row-fluid
          .span2
            %b
              Associate
          .span10
            = @client_commission_deal_associate_member.associate
        .row-fluid
          .span2
            %b
              Associate product
          .span10
            = @client_commission_deal_associate_member.associate_product
        .row-fluid
          .span2
            %b
              Member commission split percentage
          .span10
            = @client_commission_deal_associate_member.member_commission_split_percentage
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_commission_deal_associate_member.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_commission_deal_associate_member.updated_at)
