.page-header
  %h3
    Journals_document_export_batches
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), journals_document_export_batches_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), journals_document_export_batches_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => journals_document_export_batches_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Journals document
          %th
            Is success
          %th
            Result message
          %th.button3
      %tbody
        - @journals_document_export_batches.each do |journals_document_export_batch|
          %tr
            %td
              = journals_document_export_batch.uid
            %td
              = journals_document_export_batch.code
            %td
              = journals_document_export_batch.journals_document
            %td
              = journals_document_export_batch.is_success
            %td
              = journals_document_export_batch.result_message
            %td
              .btn-group
                = link_to journals_document_export_batch, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_journals_document_export_batch_path(journals_document_export_batch), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to journals_document_export_batch, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@journals_document_export_batches)

  #new.tab-pane
    = render 'form'
