= simple_form_for(@client_billing_setting, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :code
    = f.input :uid
    = f.association :company_division
    = f.association :client
    = f.association :client_product
    = f.input :start_date
    = f.input :expiry_date
    = f.input :is_active
    = f.association :media_category
    = f.association :supplier
    = f.association :media_space

  .form-actions
    = f.button :wrapped,
               :delete => @client_billing_setting,
               :cancel => client_billing_settings_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
