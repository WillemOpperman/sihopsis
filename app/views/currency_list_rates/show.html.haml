.page-header
  %h3
    Currency_list_rates
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to currency_list_rates_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_currency_list_rate_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_currency_list_rate_path(@currency_list_rate) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @currency_list_rate.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @currency_list_rate.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @currency_list_rate.name
        .row-fluid
          .span2
            %b
              Currency list
          .span10
            = @currency_list_rate.currency_list
        .row-fluid
          .span2
            %b
              Currency
          .span10
            = @currency_list_rate.currency
        .row-fluid
          .span2
            %b
              Buying rate
          .span10
            = @currency_list_rate.buying_rate
        .row-fluid
          .span2
            %b
              Selling rate
          .span10
            = @currency_list_rate.selling_rate
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @currency_list_rate.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@currency_list_rate.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@currency_list_rate.updated_at)
