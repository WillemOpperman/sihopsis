            Nett amount
          %th
            Is billed
          %th
            Is credited
          %th
            Notes
          %th
            Eis sync date
          %th
            Client financial document line
          %th
            Billing day start date
          %th
            Billing day end date
          %th
            Creation source
          %th
            Gross home amount
          %th
            Commission home amount
          %th
            Fees home amount
          %th
            Nett home amount
          %th
            Parent
          %th.button3
      %tbody
        - @campaign_schedule_placement_billing_day_lines.each do |campaign_schedule_placement_billing_day_line|
          %tr
            %td
              = campaign_schedule_placement_billing_day_line.uid
            %td
              = campaign_schedule_placement_billing_day_line.code
            %td
              = campaign_schedule_placement_billing_day_line.campaign_schedule_placement
            %td
              = campaign_schedule_placement_billing_day_line.percent_of_total
            %td
              = campaign_schedule_placement_billing_day_line.quantity
            %td
              = campaign_schedule_placement_billing_day_line.gross_amount
            %td
              = campaign_schedule_placement_billing_day_line.commission_amount
