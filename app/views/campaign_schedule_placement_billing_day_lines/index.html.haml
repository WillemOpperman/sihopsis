            %td
              = campaign_schedule_placement_billing_day_line.is_credited
            %td
              = campaign_schedule_placement_billing_day_line.notes
            %td
              = campaign_schedule_placement_billing_day_line.eis_sync_date
            %td
              = campaign_schedule_placement_billing_day_line.client_financial_document_line
            %td
              = campaign_schedule_placement_billing_day_line.billing_day_start_date
            %td
              = campaign_schedule_placement_billing_day_line.billing_day_end_date
            %td
              = campaign_schedule_placement_billing_day_line.creation_source
            %td
              = campaign_schedule_placement_billing_day_line.gross_home_amount
            %td
              = campaign_schedule_placement_billing_day_line.commission_home_amount
            %td
              = campaign_schedule_placement_billing_day_line.fees_home_amount
            %td
              = campaign_schedule_placement_billing_day_line.nett_home_amount
            %td
              = campaign_schedule_placement_billing_day_line.parent
            %td
              .btn-group
                = link_to campaign_schedule_placement_billing_day_line, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_campaign_schedule_placement_billing_day_line_path(campaign_schedule_placement_billing_day_line), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to campaign_schedule_placement_billing_day_line, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@campaign_schedule_placement_billing_day_lines)

  #new.tab-pane
    = render 'form'
