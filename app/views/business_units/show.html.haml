.page-header
  %h3
    Business_units
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to business_units_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_business_unit_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_business_unit_path(@business_unit) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @business_unit.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @business_unit.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @business_unit.name
        .row-fluid
          .span2
            %b
              Is active
          .span10
            = @business_unit.is_active
        .row-fluid
          .span2
            %b
              Creation source
          .span10
            = @business_unit.creation_source
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @business_unit.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@business_unit.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@business_unit.updated_at)
