.page-header
  %h3
    Media_target_types
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to media_target_types_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_media_target_type_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_media_target_type_path(@media_target_type) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @media_target_type.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @media_target_type.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @media_target_type.name
        .row-fluid
          .span2
            %b
              Media category
          .span10
            = @media_target_type.media_category
        .row-fluid
          .span2
            %b
              Is active
          .span10
            = @media_target_type.is_active
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @media_target_type.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_target_type.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@media_target_type.updated_at)
