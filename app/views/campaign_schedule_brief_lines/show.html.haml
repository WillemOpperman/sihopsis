.page-header
  %h3
    Campaign_schedule_brief_lines
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to campaign_schedule_brief_lines_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_campaign_schedule_brief_line_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_campaign_schedule_brief_line_path(@campaign_schedule_brief_line) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @campaign_schedule_brief_line.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @campaign_schedule_brief_line.code
        .row-fluid
          .span2
            %b
              Revision no
          .span10
            = @campaign_schedule_brief_line.revision_no
        .row-fluid
          .span2
            %b
              Campaign schedule brief
          .span10
            = @campaign_schedule_brief_line.campaign_schedule_brief
        .row-fluid
          .span2
            %b
              Campaign schedule placement
          .span10
            = @campaign_schedule_brief_line.campaign_schedule_placement
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @campaign_schedule_brief_line.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@campaign_schedule_brief_line.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@campaign_schedule_brief_line.updated_at)
