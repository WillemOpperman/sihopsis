.page-header
  %h3
    Campaign_schedule_placement_status_change_rules
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), campaign_schedule_placement_status_change_rules_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), campaign_schedule_placement_status_change_rules_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => campaign_schedule_placement_status_change_rules_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Change from campaign schedule placement status
          %th
            Change to campaign schedule placement status
          %th
            Is allowed
          %th
            Is allowed in change wizard
          %th
            Eis sync date
          %th.button3
      %tbody
        - @campaign_schedule_placement_status_change_rules.each do |campaign_schedule_placement_status_change_rule|
          %tr
            %td
              = campaign_schedule_placement_status_change_rule.uid
            %td
              = campaign_schedule_placement_status_change_rule.code
            %td
              = campaign_schedule_placement_status_change_rule.name
            %td
              = campaign_schedule_placement_status_change_rule.change_from_campaign_schedule_placement_status
            %td
              = campaign_schedule_placement_status_change_rule.change_to_campaign_schedule_placement_status
            %td
              = campaign_schedule_placement_status_change_rule.is_allowed
            %td
              = campaign_schedule_placement_status_change_rule.is_allowed_in_change_wizard
            %td
              = campaign_schedule_placement_status_change_rule.eis_sync_date
            %td
              .btn-group
                = link_to campaign_schedule_placement_status_change_rule, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_campaign_schedule_placement_status_change_rule_path(campaign_schedule_placement_status_change_rule), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to campaign_schedule_placement_status_change_rule, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@campaign_schedule_placement_status_change_rules)

  #new.tab-pane
    = render 'form'
