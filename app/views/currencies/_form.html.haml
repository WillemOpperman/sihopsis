= simple_form_for(@currency, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :code
    = f.input :uid
    = f.association :default_tax_type
    = f.input :name
    = f.input :symbol

  .form-actions
    = f.button :wrapped,
               :delete => @currency,
               :cancel => currencies_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
