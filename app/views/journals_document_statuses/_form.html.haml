= simple_form_for(@journals_document_status, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.input :is_active
    = f.input :is_cancelled
    = f.input :is_approved
    = f.input :is_default
    = f.association :creation_source
    = f.input :eis_sync_date
    = f.input :is_exported

  .form-actions
    = f.button :wrapped,
               :delete => @journals_document_status,
               :cancel => journals_document_statuses_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
