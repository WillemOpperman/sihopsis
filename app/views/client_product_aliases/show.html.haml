.page-header
  %h3
    Client_product_aliases
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to client_product_aliases_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_client_product_alias_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_client_product_alias_path(@client_product_alias) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @client_product_alias.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @client_product_alias.code
        .row-fluid
          .span2
            %b
              Client product
          .span10
            = @client_product_alias.client_product
        .row-fluid
          .span2
            %b
              Client
          .span10
            = @client_product_alias.client
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @client_product_alias.name
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_product_alias.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@client_product_alias.updated_at)
