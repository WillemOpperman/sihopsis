.page-header
  %h3
    Payment_receipts
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to payment_receipts_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_payment_receipt_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_payment_receipt_path(@payment_receipt) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @payment_receipt.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @payment_receipt.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @payment_receipt.name
        .row-fluid
          .span2
            %b
              Payment amount
          .span10
            = @payment_receipt.payment_amount
        .row-fluid
          .span2
            %b
              Creation source
          .span10
            = @payment_receipt.creation_source
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @payment_receipt.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@payment_receipt.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@payment_receipt.updated_at)
