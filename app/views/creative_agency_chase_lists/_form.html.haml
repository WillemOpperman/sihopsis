= simple_form_for(@creative_agency_chase_list, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :status
    = f.association :material_contact
    = f.association :creative_agency
    = f.association :creative_agency_contact
    = f.association :media_category
    = f.input :issued_date
    = f.input :notes
    = f.input :revision_no
    = f.association :creation_source
    = f.association :communication_status
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @creative_agency_chase_list,
               :cancel => creative_agency_chase_lists_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
