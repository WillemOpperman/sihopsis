= simple_form_for(@rate_card_line, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.association :rate_card
    = f.association :rate_type
    = f.input :desired_minimum_rate
    = f.association :cost_type
    = f.input :actual_unit_cost_gross
    = f.input :overriding_supplier_commission_percentage
    = f.input :actual_unit_cost_nett
    = f.association :agency_commission_type
    = f.input :agency_commission_percentage
    = f.association :media_space_part
    = f.association :media_space_section
    = f.association :media_category_size
    = f.association :media_category_format
    = f.input :description

  .form-actions
    = f.button :wrapped,
               :delete => @rate_card_line,
               :cancel => rate_card_lines_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
