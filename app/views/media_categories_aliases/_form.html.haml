= simple_form_for(@media_categories_alias, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :media_category
    = f.association :creation_source

  .form-actions
    = f.button :wrapped,
               :delete => @media_categories_alias,
               :cancel => media_categories_aliases_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
