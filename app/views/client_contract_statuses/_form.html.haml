= simple_form_for(@client_contract_status, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.input :is_active
    = f.input :is_cancelled
    = f.input :is_approved
    = f.input :is_default
    = f.input :eis_sync_date
    = f.input :is_status_active

  .form-actions
    = f.button :wrapped,
               :delete => @client_contract_status,
               :cancel => client_contract_statuses_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
