= simple_form_for(@production_cost_type, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_messages

  .form-inputs
    = f.input :uid
    = f.input :code
    = f.input :name
    = f.association :currency
    = f.association :supplier
    = f.association :company
    = f.association :company_division
    = f.association :client
    = f.association :client_product
    = f.input :unit_cost_amount
    = f.input :production_cost_margin_percentage
    = f.input :is_active
    = f.association :creation_source
    = f.input :eis_sync_date

  .form-actions
    = f.button :wrapped,
               :delete => @production_cost_type,
               :cancel => production_cost_types_path,
               :data => { :disable_with => t(:saving, :scope => :forms) }
