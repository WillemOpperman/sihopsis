.page-header
  %h3
    Production_cost_types
%ul.nav.nav-tabs
  %li.active
    %a{:href => '#list', :data => {:toggle => :tab}}
      = icon_tag('list-alt')
      = t(:list, :scope => :tabs)
  %li
    %a{:href => '#new', :data => {:toggle => :tab}}
      = icon_tag('plus')
      = t(:add_new, :scope => :tabs)

  %li.dropdown.pull-right
    %a.dropdown-toggle{:data => {:toggle => "dropdown", :target => "#"}}
      = icon_tag('arrow-circle-o-down')
      = t(:download, :scope => :tabs)
      %b.caret
    %ul.dropdown-menu.pull-right
      %li
        = link_to t(:csv, :scope => :formats), production_cost_types_path(:format => :csv)
      %li
        = link_to t(:xls, :scope => :formats), production_cost_types_path(:format => :xls)

.tab-content
  #list.tab-pane.active
    = render :partial => 'shared/grid_search', :locals => { :url => production_cost_types_path }

    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th
            Uid
          %th
            Code
          %th
            Name
          %th
            Currency
          %th
            Supplier
          %th
            Company
          %th
            Company division
          %th
            Client
          %th
            Client product
          %th
            Unit cost amount
          %th
            Production cost margin percentage
          %th
            Is active
          %th
            Creation source
          %th
            Eis sync date
          %th.button3
      %tbody
        - @production_cost_types.each do |production_cost_type|
          %tr
            %td
              = production_cost_type.uid
            %td
              = production_cost_type.code
            %td
              = production_cost_type.name
            %td
              = production_cost_type.currency
            %td
              = production_cost_type.supplier
            %td
              = production_cost_type.company
            %td
              = production_cost_type.company_division
            %td
              = production_cost_type.client
            %td
              = production_cost_type.client_product
            %td
              = production_cost_type.unit_cost_amount
            %td
              = production_cost_type.production_cost_margin_percentage
            %td
              = production_cost_type.is_active
            %td
              = production_cost_type.creation_source
            %td
              = production_cost_type.eis_sync_date
            %td
              .btn-group
                = link_to production_cost_type, :title => t(:show, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('eye')
                = link_to edit_production_cost_type_path(production_cost_type), :title => t(:edit, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('pencil')
                = link_to production_cost_type, :method => :delete, :data => { :confirm => t(:delete_confirmation, :scope => :messages) }, :title => t(:delete, :scope => :messages), :class => [:btn, :as_tooltip] do
                  = icon_tag('times')

    .pull-right
      = paginate(@production_cost_types)

  #new.tab-pane
    = render 'form'
