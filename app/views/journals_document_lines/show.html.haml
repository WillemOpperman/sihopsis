.page-header
  %h3
    Journals_document_lines
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to journals_document_lines_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_journals_document_line_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#show", :"data-toggle" => "tab"}
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li
        = link_to edit_journals_document_line_path(@journals_document_line) do
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #show.tab-pane.active
        .row-fluid
          .span2
            %b
              Uid
          .span10
            = @journals_document_line.uid
        .row-fluid
          .span2
            %b
              Code
          .span10
            = @journals_document_line.code
        .row-fluid
          .span2
            %b
              Name
          .span10
            = @journals_document_line.name
        .row-fluid
          .span2
            %b
              Journals document
          .span10
            = @journals_document_line.journals_document
        .row-fluid
          .span2
            %b
              Debit account no
          .span10
            = @journals_document_line.debit_account_no
        .row-fluid
          .span2
            %b
              Credit account no
          .span10
            = @journals_document_line.credit_account_no
        .row-fluid
          .span2
            %b
              Amount
          .span10
            = @journals_document_line.amount
        .row-fluid
          .span2
            %b
              Comments
          .span10
            = @journals_document_line.comments
        .row-fluid
          .span2
            %b
              Creation source
          .span10
            = @journals_document_line.creation_source
        .row-fluid
          .span2
            %b
              Eis sync date
          .span10
            = @journals_document_line.eis_sync_date
        .row-fluid
          .span12
            %hr
        .row-fluid
          .span2
            %b
              = t(:created_at, :scope => :forms)
          .span10
            = time_ago_tag(@journals_document_line.created_at)
        .row-fluid
          .span2
            %b
              = t(:updated_at, :scope => :forms)
          .span10
            = time_ago_tag(@journals_document_line.updated_at)
