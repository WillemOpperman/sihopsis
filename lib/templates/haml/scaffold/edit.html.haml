.page-header
  %h3
    <%= plural_table_name.capitalize %>
.row-fluid
  .span12
    %ul.nav.nav-tabs
      %li
        = link_to <%= plural_table_name %>_path do
          = icon_tag('list-alt')
          = t(:list, :scope => :tabs)
      %li
        = link_to new_<%= singular_table_name %>_path do
          = icon_tag('plus')
          = t(:add_new, :scope => :tabs)
      %li
        = link_to @<%= singular_table_name %> do
          = icon_tag('eye')
          = t(:show, :scope => :tabs)
      %li.active
        %a{:"data-target" => "#edit", :"data-toggle" => "tab"}
          = icon_tag('pencil')
          = t(:edit, :scope => :tabs)
    .tab-content
      #edit.tab-pane.active
        = render 'form'
